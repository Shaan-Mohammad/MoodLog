<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Profile Avatar and Email -->
        <ImageView
            android:id="@+id/profileAvatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_profile"
            android:contentDescription="Profile Avatar"
            android:background="@drawable/circle_bg"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp"/>
        <TextView
            android:id="@+id/profileEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user@example.com"
            android:textSize="18sp"
            android:textColor="@color/primary_text"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <!-- Dark Mode Toggle -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/surface"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Dark Mode"
                android:textSize="16sp"
                android:textColor="@color/primary_text"/>
            <Switch
                android:id="@+id/darkModeSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Reminder Settings -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/surface"
            android:padding="16dp"
            android:layout_marginBottom="24dp"
            android:elevation="2dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Daily Reminder"
                android:textSize="16sp"
                android:textColor="@color/primary_text"/>
            <TextView
                android:id="@+id/reminderTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20:00"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/primary_text"
                android:layout_marginEnd="8dp"/>
            <Button
                android:id="@+id/setReminderBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Time"
                android:background="@drawable/button_bg"
                android:textColor="@color/on_primary"
                android:textAllCaps="false"/>
        </LinearLayout>

        <!-- Year-in-Pixels -->
        <Button
            android:id="@+id/yearPixelsBtn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="ðŸ“… Year in Pixels"
            android:background="@drawable/button_bg"
            android:textColor="@color/on_primary"
            android:textAllCaps="false"
            android:layout_marginBottom="16dp"/>

        <!-- Streak Display -->
        <TextView
            android:id="@+id/streakText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ”¥ Streak: 0 days"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:gravity="center"
            android:layout_marginBottom="8dp"/>
        <TextView
            android:id="@+id/longestText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ† Longest: 0 days"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/secondary_text"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <!-- Sign Out Button -->
        <Button
            android:id="@+id/signOutBtn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Sign Out"
            android:background="@drawable/button_bg_red"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"/>
    </LinearLayout>
</ScrollView>
